{
	"name": "roblox-ts",
	"version": "0.0.29",
	"description": "",
	"main": "out/index.js",
	"repository": {
		"type": "git",
		"url": "https://github.com/roblox-ts/roblox-ts.git"
	},
	"bin": {
		"rbxtsc": "out/index.js"
	},
	"scripts": {
		"tslint": "npx tslint -p tsconfig.json",
		"prettylint": "npx prettylint --config ./.prettierrc.json \"**/*.ts\"",
		"test": "npm run build && npx nyc --reporter=html mocha --timeout 0 --recursive out/test.js && lua tests/spec.lua",
		"coverage": "npx nyc report --reporter=text-lcov | coveralls",
		"prettier": "npx prettier --config ./.prettierrc.json --write \"**/*.ts\"",
		"build": "npx tsc",
		"prepublishOnly": "npm run build && npm version patch"
	},
	"nyc": {
		"extension": [
			".js"
		],
		"include": [
			"out/transpiler"
		],
		"exclude": [
			"out/transpiler/await.js"
		],
		"reporter": [
			"text-lcov"
		],
		"all": true
	},
	"author": "",
	"license": "MIT",
	"dependencies": {
		"chokidar": "^2.0.4",
		"fs-extra": "^7.0.1",
		"ts-morph": "^1.0.0",
		"yargs": "^12.0.5"
	},
	"devDependencies": {
		"@types/chokidar": "^1.7.5",
		"@types/fs-extra": "^5.0.4",
		"@types/mocha": "^5.2.5",
		"@types/node": "^10.12.12",
		"@types/yargs": "^11.1.2",
		"coveralls": "^3.0.2",
		"mocha": "^5.2.0",
		"nyc": "^13.1.0",
		"prettier": "^1.15.3",
		"prettylint": "^1.0.0",
		"source-map-support": "^0.5.9",
		"ts-node": "^7.0.1",
		"tslint": "^5.11.0"
	}
}
